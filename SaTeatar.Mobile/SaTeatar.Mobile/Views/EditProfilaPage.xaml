<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewModels="clr-namespace:SaTeatar.Mobile.ViewModels"
             x:Class="SaTeatar.Mobile.Views.EditProfilaPage">

    <ContentPage.BindingContext>
        <viewModels:KupciViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="20" Orientation="Vertical">
            <Label Text="Licni podaci" HorizontalOptions="Center" />
            <Label Text="Korisnik:"/>
            <Entry x:Name="Username" Text="{Binding KorisnickoIme}" IsEnabled="False"></Entry>
            <Label Text="Ime:" />
            <Entry  x:Name="FirstName" Text="{Binding Ime}"></Entry>
            <Label Text="Prezime: "/>
            <Entry x:Name="LastName" Text="{Binding Prezime}"></Entry>
            <Label Text="Email:"/>
            <Entry x:Name="Email" Text="{Binding Email}"></Entry>
            <Label Text="Lozinka:"/>
            <Entry x:Name="Password" Text="{Binding Lozinka}" IsPassword="true"></Entry>
            <Button  Text="Sacuvaj podatke" Clicked="Button_Clicked"></Button>
            <Label IsVisible="{Binding IsBusy}" Text="Izmjena u toku, pricekajte..." HorizontalOptions="Center" TextColor="Gray"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>